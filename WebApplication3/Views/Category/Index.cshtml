@model IEnumerable<WebApplication3.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h1>Index</h1>
<div class="container">
    <div class="row">
        <div class="col-12">
            
            <div style="float:right" class="text-light">
                <a class="btn btn-sm btn-warning m-1 p-1" asp-action="AddCategory" asp-controller="Category">Add Category</a>
            </div>
            <table class="table table-bordered table-hover text-center">
                <thead class="bg-dark text-light">
                    <tr>
                        <th>CategoryId</th>
                        <th>CategoryName</th>
                        <th>Action</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach(var d in Model)
                    {
                        <tr>
                            <td>@d.CategoryId</td>
                            <td>@d.CategoryName</td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="AddCategory" asp-controller="Category" asp-route-id="@d.CategoryId">Edit</a>

                                <a class="btn btn-sm btn-warning" asp-action="Details" asp-controller="Category" asp-route-id="@d.CategoryId">Details</a>

                                <a class="btn btn-sm btn-info" asp-action="Delete" onclick="return confirm('Are you sure ! you want to delete this')asp-controller="Category" asp-route-id="@d.CategoryId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <a class="btn btn-sm btn-warning float-end m-1 p-1" asp-action="Index" asp-controller="Dashboard">Back to DashBoard</a>
        </div>

    </div>

</div>

