@model WebApplication3.Models.ViewModel.ProductCategorySummaryViewModel
@{
    ViewData["Title"] = "DetailsProduct";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-3">
            <div class="card">
                <div class="card-header text-center">
                    <div class="card-body">
                        <h2 class="text-center text-info m-1">AddProduct</h2>
                        <table class="text-center table table-border">
                            <tr>
                                <td>ProductId</td>
                                <td class="text-info">@Model.ProductId</td>
                            </tr>
                            <tr>
                                <td>ProductName</td>
                                <td class="text-info">@Model.ProductName</td>
                            </tr>
                            <tr>
                                <td>CategoryId</td>
                                <td class="text-info">@Model.CategoryId</td>
                            </tr>
                            <tr>
                                <td>CategoryName</td>
                                <td class="text-info">@Model.CategoryName</td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-footer mt-4">
                        <div class="d-grid gap-2">
                            <a class="btn btn-sm btn-warning m-2 p-2" asp-action="Index" asp-controller="Product">Back to List</a>
                        </div>

                    </div>

                </div>

            </div>

        </div>
    </div>
</div>

